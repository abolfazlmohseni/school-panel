# frontend/.htaccess
RewriteEngine On

# اگر فایل یا پوشه واقعی وجود داشت، همان را سرو کن
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# همه درخواست‌ها را به index.html هدایت کن
RewriteRule ^(.*)$ index.html [L]

# برای فایل‌های CSS و JS کشینگ بهتر
<FilesMatch "\.(css|js)$">
    Header set Cache-Control "max-age=86400, public"
</FilesMatch>